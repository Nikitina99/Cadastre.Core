
@{
    ViewBag.Title = "Client List";
}

<h2>Кадастровый учёт</h2>

<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddOrEdit","Client")')"><i class="fa fa-plus"></i> Добавить</a>
<table id="clientTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Клиент</th>
            <th>Тип клиента</th>
            <th>ИНН</th>
            <th>Юридический адрес</th>
            <th>Фактический адрес</th>
            <th>Почтовый адрес</th>
            <th>Страна</th>    
            <th></th>
        </tr>
    </thead>
</table>

<link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

@section scripts{
    <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable= $("#clientTable").DataTable({
                "ajax": {
                    "url": "/Client/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "ClientName" },
                    { "data": "TypeClient" },
                    { "data": "INN" },
                    { "data": "LegalAddress" },
                    { "data": "ActualAddress" },
                    { "data": "MailingAddress" },
                    { "data": "Country" },
                    {
                        "data": "ClientId", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("AddOrEdit","Client")/" + data + "')><i class='fa fa-pencil'></i> Изменить</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "150px"
                    }
                ],
                "language": {
                    "emptyTable":"Таблица не найдена. Пожалуйста, нажмите <b>Добавить<b>."
                }

            });
        });

        //Форма открывается при нажатии кнопки "Добавить"
        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Клиенты',
                        height: 500,
                        width: 600,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        //Функция отправки данных из формы "ADDOrEdit"
        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className:"success"
                        })
                    }
                }
            });
            return false;
        }

    </script>


    }
